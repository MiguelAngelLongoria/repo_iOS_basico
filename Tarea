import Foundation

// let se utiliza para indicar constantes
// var se utiliza para indicar variables

let edad_1: Int = 50
let edad_2 = 505.4
print("El tipo de edad_2 es \(type(of: edad_2))")

var edad: Int? = 10

var mayoria_de_edad: Int = 18

var nombre: String? = nil

print("El tipo de dato de mayoria_de_edad es \(type(of: mayoria_de_edad))")

var saludar_a: String = "Buenos días \(nombre ?? "Fulanito")"

print(saludar_a)


