import Foundation

var numero_pc = Int.random(in: 0...100)
print("Se generó un número aleatorio entre 0 y 100 (oculto)")

func validar_entrada_a_numero() -> Int {
    while true {
        print("Por favor introduce un número: ", terminator: "")
        if let entrada = readLine(), let numero = Int(entrada) {
            if (0...100).contains(numero) {
                return numero
            } else {
                print("El número debe estar entre 0 y 100")
            }
        } else {
            print("Entrada inválida, escribe un número válido")
        }
    }
}

var respuesta_del_usuario = 0
var intentos = 0

while respuesta_del_usuario != numero_pc {
    respuesta_del_usuario = validar_entrada_a_numero()
    intentos += 1
    
    if respuesta_del_usuario == numero_pc {
        print("¡Acertaste! El número es correcto.")
        print("Lo lograste en \(intentos) intentos.")
    } else if respuesta_del_usuario < numero_pc {
        print("Tu número es muy bajo")
    } else {
        print("Tu número es muy alto")
    }
}
